@model IEnumerable<Product>

@foreach (var item in Model)
{
    <div class="col mb-5">
        <div class="card h-100">
            <!-- Product image-->
            @if (item.ProductImages!= null && item.ProductImages.Any())
            {
                <img src="@item.ProductImages.FirstOrDefault()?.ImageUrl" alt="" class="img-fluid rounded" />
            }
            else
            {
                <p class="text-center">Ürüne ait fotoğraf yok!</p>
            }
            <!-- Product details-->
            <div class="card-body p-4">
                <div class="text-center">
                    <!-- Product name-->
                    <h5 class="fw-bolder">@item.Name</h5>
                    <!-- Product price-->
                    @item.Price ₺
                </div>
            </div>
            <!-- Product actions-->
            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                <div class="text-center"><a class="btn btn-outline-dark mt-auto" href="/Products/Detail/@item.Id">İncele</a></div>
            </div>
        </div>
    </div>
}
