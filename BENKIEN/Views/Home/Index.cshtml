    <!-- |=====|| Slider Wrapper Start ||===============| -->
    <section class="slider__wrapper my-0">
        <div class="swiper mySwiper">
            <div class="swiper-wrapper">
                @foreach (var slider in Model.Sliders)
                {
                    <div class="swiper-slide">
                        <figure class="mb-0">
                            <img src="~/img/@slider.Image" alt="" class="img-fluid">
                        </figure>
                        <div class="slider__content">
                            <div class="container text-center">
                                <div class="d-grid position-absolute top-0 start-50 translate-middle-x mt-5 w-100">
                                    <strong class="text-dark fs-2">
                                        @slider.Title
                                    </strong>
                                    <span class="text-dark fs-2">@slider.Description</span>
                                </div>
                            </div>
                            <div class="button__links position-absolute bottom-0 start-50 translate-middle-x mb-5">
                                <a href="@slider.Link " class="btn btn-dark shadow-none rounded-pill py-3 px-5">Ürünü Keşfet</a>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="autoplay-progress">
                <svg viewBox="0 0 48 48">
                    <circle cx="24" cy="24" r="20"></circle>
                </svg>
                <span></span>
            </div>
        </div>
    </section>

