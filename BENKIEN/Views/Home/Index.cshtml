    <!-- |=====|| Popular Product Start ||===============| -->

    <section class="popular__product">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="page__title d-flex justify-content-between align-items-center mb-4">
                        <div class="title__text">
                            <strong>
                                En Çok Satan Ürünlerimiz
                            </strong>
                            <p>
                                Kullanıcılar tarafından en çok satın alınan ürünlerimiz
                            </p>
                        </div>

                        <a asp-action="Index" asp-controller="Products" class="btn btn-dark shadow-none rounded-pill py-3 px-5 icon-link icon-link-hover">
                            Hepsini Gör
                            <i class=" bi bi-arrow-right text-white h-auto"></i>
                        </a>
                    </div>
                </div>
                <div class="row">
                    @foreach (var product in Model.Products)
                    {
                        <div class="col-md-3 mb-4">
                            <!-- Adjust the column width based on your preference -->
                            <a asp-action="Detail" asp-controller="Products" asp-route-id="@product.Id" class="text-decoration-none text-dark">
                                <div class="card rounded-3 border-0 shadow-sm position-relative">
                                    <figure class="mb-0 position-relative">
                                        <img src="@product.ProductImages.FirstOrDefault()?.ImageUrl" alt="" class="rounded-4 rounded-bottom-4" style="max-width: 100%; height: auto;" />
                                    </figure>
                                    <div class="card-body py-4">
                                        <div class="product__title mb-2">
                                            <strong>@product.Name</strong>
                                        </div>
                                        <div class="product__desc">
                                            <p class="mb-2">
                                                @product.Description
                                            </p>
                                        </div>
                                        <div class="product__price d-flex align-items-center">
                                            <strong>@product.Price₺</strong>
                                          @*   <small><del class="ms-3">125,00₺</del></small> *@
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </div>
                    }
                </div>

            </div>
    </section>

