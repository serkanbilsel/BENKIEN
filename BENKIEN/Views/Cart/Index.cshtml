@model List<Cart>

@{
    ViewData["Title"] = "Index";
    
}



<h2>Sepetim</h2>

@if (Model.Count > 0)
{
    <table class="row justify-content-center">
        <thead>
            <tr>
                <th>Ürün Adı</th>
                <th>Miktar</th>
                <th>Fiyat</th>
                <!-- Diğer sütunlar... -->
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Product.Name</td>
                    <td>@item.Quantity</td>
                    <td>@item.Product.Price</td>
                    <!-- Diğer sütunlar... -->
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Sepetiniz boş.</p>
}

<a asp-action="Checkout" class="btn btn-primary">Ödeme Yap</a>
