@model IEnumerable<Slider>

@{
    ViewData["Title"] = "Slider Resimleri";
}

<h1>Slider Resimleri</h1>

<p>
    <a class="btn btn-outline-primary" asp-action="Create">Yeni Ekle</a>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                Resim
            </th>
            <th>
                Başlık
            </th>
            <th>
                Bağlantı
            </th>
            <th>
                İşlemler
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="/Img/@item.Image" alt="@item.Title" height="40" />
                </td>
                <td>
                    @item.Title
                </td>
                <td>
                    @item.Link
                </td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Düzenle</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
